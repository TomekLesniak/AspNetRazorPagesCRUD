@page
@model PeopleWeb.Pages.People.CreateModel
@{
    ViewData["Title"] = "Create";
}
<h1>Create Person</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Person.FirstName"></label>
        <input asp-for="Person.FirstName"/>
        <span asp-validation-for="Person.FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Person.LastName"></label>
        <input asp-for="Person.LastName"/>
        <span asp-validation-for="Person.LastName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Person.DateOfBirth"></label>
        <input asp-for="Person.DateOfBirth"/>
        <span asp-validation-for="Person.DateOfBirth"></span>
    </div>
    <div class="form-group">
        <label asp-for="Person.IsActive"></label>
        <input asp-for="Person.IsActive"/>
        <span asp-validation-for="Person.IsActive"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary"/>
    </div>
</form>
