@model DataLibrary.Models.PersonModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

@if (Model is null)
{
    <h4>Record was not found in the database.</h4>
}
else
{
    <h4>Are you sure you want to delete @Model.FirstName @Model.LastName?</h4>
    <form asp-action="Delete">
        <input asp-for="Id" value="@Model.Id" type="hidden"/>
        <input type="submit" value="Delete" class="btn btn-danger"/>
    </form>
}

